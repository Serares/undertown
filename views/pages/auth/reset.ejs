<%- include('../../includes/header.ejs') %>
    <link rel="stylesheet" href="/css/auth.css">
    </head>

    <body class="page-load">
        <!-- Wrapper Start -->
        <div id="page_wrapper" class="container-fluid">
            <div class="row">
                <header id="header" class="w-100 bg_white nav-on-top">
                    <!-- Nav Header Start -->
                    <%- include('../../includes/navbar.ejs') %>
                        <!-- Nav Header End -->
                </header>

                <!-- Banner Section Start -->
                <!-- TODO ADD THIS TO INCLUDES -->
                <%- include('../../includes/banner_section.ejs', {pageTitle: pageTitle}) %>
                    <!-- Banner Section End -->

                    <!-- Sign In Account Start -->
                    <section class="full_row py_100 bg_gray" id="resetApp">
                        <div class="container">
                            <div class="row">
                                <div class="col-md-12">
                                    <div class=" bg_white sign_in_up" role="document">
                                        <div class="header bg_primary">
                                            <h4 class="inner-title text_white">Recuperare parola</h4>
                                        </div>
                                        <div class="body">
                                            <p>Log in</p>
                                            <p v-if="errors.length" class="px-5">
                                            <ul class="text-danger">
                                                <li v-for="error in errors">{{ error }}</li>
                                            </ul>
                                            </p>
                                            <p v-if="success !== null" class="text-primary">{{success}}</p>
                                            <form id="resetForm" action="" method="POST" novalidate
                                                @submit="formSubmit">
                                                <div class="form-group">
                                                    <input v-model="password" name="password" type="password"
                                                        class="form-control" placeholder="Parola" value="">
                                                </div>
                                                <div class="form-group">
                                                    <input v-model="confirmPassword" name="confirmPassword"
                                                        type="password" class="form-control"
                                                        placeholder="Confirmare parola" value="">
                                                </div>
                                                <input type="hidden" name="userId" value="<%= userId %>" />
                                                <input type="hidden" name="resetToken" value="<%= resetToken %>" />
                                                <div class="form-group">
                                                    <button type="submit" name="signin"
                                                        class="btn btn_primary_bg">Reseteaza parola</button>
                                                </div>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- Modal -->
                    </section>
                    <!-- Sign In Account End -->

                    <!-- Footer Section Start -->
                    <%- include('../../includes/footer.ejs') %>
                        <!-- Footer Section End -->

                        <!-- Find Part Satrt -->
                        <a href="#" id="scroll"><i class="fas fa-arrow-up"></i></a>
                        <!-- Find Part Satrt -->
            </div>
        </div>
        <!-- Wrapper End -->
        <%- include('../../includes/scripts.ejs') %>
    </body>

    </html>