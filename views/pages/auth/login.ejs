<%- include('../includes/header.ejs') %>
<link rel="stylesheet" href="/css/auth.css">
</head>

<body class="page-load">


    <!-- Wrapper Start -->
    <div id="page_wrapper" class="container-fluid">
        <div class="row">
            <header id="header" class="w-100 bg_white nav-on-top">
                <!-- Nav Header Start -->
                <%- include('../includes/navbar.ejs') %>
                <!-- Nav Header End -->
            </header>

            <!-- Banner Section Start -->
            <!-- TODO ADD THIS TO INCLUDES -->
            <%- include('../includes/banner_section.ejs', {pageTitle: pageTitle, imageUrl:imageUrl}) %>
            <!-- Banner Section End -->

            <!-- Sign In Account Start -->
            <section class="full_row py_100 bg_gray">
                <% if(errorMessage)  { %>
                <div><%=errorMessage %></div>
                <% }%>
                <div class="container">
                    <div class="row">
                        <div class="col-md-12">
                            <div class=" bg_white sign_in_up" role="document">
                                <div class="header bg_primary">
                                    <h4 class="inner-title text_white">Logheaza-te</h4>
                                </div>
                                <div class="body">
                                    <p>Log in</span>
                                    </p>
                                    <form action="/login" method="POST" novalidate>
                                        <div class="form-group">
                                            <input name="email" type="email"
                                                class="form-control <%= validationErrors.find(e => e.param === 'email') ? 'invalid' : '' %>"
                                                placeholder="Email Address" value="<%= oldInput.email %>">
                                        </div>
                                        <div class="form-group">
                                            <input name="password" type="password"
                                                class="form-control <%= validationErrors.find(e => e.param === 'password') ? 'invalid' : '' %>"
                                                placeholder="Parolă" value="<%= oldInput.password %>">
                                        </div>
                                        <div class="form-group">
                                            <button type="submit" name="signin" class="btn btn_primary_bg">Intră in
                                                cont</button>
                                        </div>
                                    </form>
                                    <div class="password_recovery">Recuperare Parolă <a href="#">Click Here</a>
                                    </div>
                                </div>
                                <div class="footer">Click and read our terms and condition<a href="#">Terms and
                                        Condition</a></div>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- Modal -->
            </section>
            <!-- Sign In Account End -->

            <!-- Footer Section Start -->
            <%- include('../includes/footer.ejs') %>
            <!-- Footer Section End -->

            <!-- Find Part Satrt -->
            <a href="#" id="scroll"><i class="fas fa-arrow-up"></i></a>
            <!-- Find Part Satrt -->
        </div>
    </div>
    <!-- Wrapper End -->
    <%- include('../includes/scripts.ejs') %>
    </script>
</body>

</html>