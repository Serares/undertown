<div v-if="errors.length > 0" id="modal-message" class="modal fade bd-example-modal-sm" tabindex="-1" role="dialog"
    aria-labelledby="mySmallModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-sm">
        <div class="modal-content">
            <p v-if="errors.length > 0" class="text-danger" v-for="error in errors">
                {{error}}
            </p>
            <p v-if="successMessage.length > 0" class="text-primary" v-for="message in successMessage">
                {{message}}
            </p>
        </div>
    </div>
</div>